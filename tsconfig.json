{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "allowJs": true,
    "noUncheckedIndexedAccess": true,
    "types": ["vitest/importMeta"],
    "rootDirs": ["./src"]
  },
  "include": ["./src", "vitest.config.ts", "tsup.config.ts"]
}
